<%- include('headers/html-header', {}); -%><%- include('nav/navbar', { user: {},
showButton: false }); -%>
<div class="container-fluid d-flex align-items-stretch pt-5">
  <div class="row align-items-stretch w-100 pt-3">
    <div class="col-12 py-3">
      <form action="/signup" method="POST">
        <div class="row">
          <div class="col-12">
            <h4 class="mb-3 index-header">Register</h4>
          </div>
          <div class="col-12">
            <p class="mb-3">
              Already have an account? Log in <a href="/login">here.</a>
            </p>
          </div>
          <% if (genericError && genericError.message) { %>
          <div class="col-12">
            <div class="alert alert-danger" role="alert">
              <%= genericError.message %>
            </div>
          </div>
          <% } %>
          <div class="col-12 mb-3">
            <label for="userName">
              <strong>Name</strong>
            </label>
            <input
              type="text"
              class="
                form-control
                <%
                if
                (userInfo.username_invalid)
                {%>
                is-invalid
                <%
                }
                %>
              "
              id="userName"
              name="username"
              value="<%= userInfo.username %>"
              placeholder="e.g. Chee Kean"
            />
            <div class="invalid-feedback"><%= userInfo.username_invalid %></div>
          </div>
          <div class="col-12 mb-3">
            <label for="password">
              <strong>Password</strong>
            </label>
            <input
              type="password"
              class="
                form-control
                <%
                if
                (userInfo.password_invalid)
                {%>
                is-invalid
                <%
                }
                %>
              "
              id="password"
              name="password"
              value=""
            />
            <div class="invalid-feedback"><%= userInfo.password_invalid %></div>
          </div>
        </div>
        <hr class="mb-4" />
        <button class="btn btn-primary btn-lg btn-block" type="submit">
          Register
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('footers/html-footer'); -%>
